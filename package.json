{
  "name": "svgx",
  "version": "0.8.0",
  "description": "is a universal SVG renderer",
  "main": "svgx.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "check-deps": "npm outdated",
    "example": "NODE_PATH=. babel-node example.js",
    "docs:_data": "for x in package.json tags.json; do npm run docs:_data:$x; done",
    "docs:_data:package.json": "cp package.json docs/_data/",
    "docs:_data:tags.json": "wget https://api.github.com/repos/fibo/SVGx/tags -O docs/_data/tags.json",
    "homepage": "echo \"---\ntitle: $npm_package_name\n---\" > docs/index.md; cat README.md >> docs/index.md",
    "jekyll": "npm run homepage; npm run docs:_data; cd docs; jekyll build; cd ..",
    "lint": "standard svgx.js test.js",
    "postversion": "git push origin v${npm_package_version}; npm publish; npm run docs:_data",
    "postdocs:_data": "git commit -am ':arrow_up: updated version'; git push origin master",
    "test": "NODE_PATH=. tape -r babel-register test.js"
  },
  "pre-commit": [
    "lint",
    "test",
    "check-deps"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/SVGx.git"
  },
  "keywords": [
    "svg",
    "universal",
    "react"
  ],
  "author": {
    "name": "Gianluca Casati",
    "url": "http://g14n.info"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fibo/SVGx/issues"
  },
  "homepage": "http://g14n.info/SVGx",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "pre-commit": "^1.2.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "standard": "10.0.3",
    "tape": "^4.8.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "not-defined": "^2.0.0"
  }
}
